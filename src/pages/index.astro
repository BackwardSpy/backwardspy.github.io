---
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";

import inscriptions from "../inscriptions.json";
---

<Layout title="index">
	<div slot="header" class="title-block">
		<h1 class="title">
			<span>welcome to</span>
			<span><span class="magic">the pigeon zone</span>.</span>
		</h1>
		<h2 class="subtitle">please enjoy your stay</h2>
	</div>

	<div class="container">
		<div class="cards">
			<Card href="/rosetta" title="the rosetta stone">
				<div class="stone">
					{
						inscriptions.map((inscription) => (
							<div class="inscription">
								<p>{inscription.language}</p>
							</div>
						))
					}
				</div>
			</Card>

			<Card href="/ctp" title="some dancing bois">
				<span class="oversize">ðŸ•ºðŸ•ºðŸ•º</span>
			</Card>

			<Card
				href="https://github.com/backwardspy"
				title="a github page"
				external="true"
			>
				<p>
					(where i make it as difficult as possible to change the
					colour of your favourite application)
				</p>
			</Card>
		</div>
	</div>
</Layout>

<style>
	div.cards {
		display: flex;
		flex-wrap: wrap;
		justify-content: space-evenly;
		gap: 1rem;
	}

	div.stone {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
	}

	div.inscription {
		padding: 0.2rem;
	}

	span.oversize {
		font-size: 3rem;
	}
</style>
