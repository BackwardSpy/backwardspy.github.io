---
import Card from "../components/Card.astro";
import inscriptions from "../inscriptions.json";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="index">
	<div slot="header" class="title-block">
		<h1 class="title">
			<span>welcome to</span>
			<span><span class="magic">the pigeon zone</span>.</span>
		</h1>
		<h2 class="subtitle">please enjoy your stay</h2>
	</div>

	<div class="cards">
		<Card
			href="/rosetta"
			title="the rosetta stone"
			icon="ph:translate-duotone"
		>
			<div class="stone">
				{
					inscriptions.map((inscription) => (
						<span class="inscription">{inscription.language}</span>
					))
				}
			</div>
		</Card>

		<Card href="/xy" title="xy" icon="ph:math-operations-duotone">
			<p>plot pixels with simple expressions</p>
		</Card>

		<Card
			href="/little-fonts"
			title="little fonts"
			icon="ph:text-aa-duotone"
		>
			<p>what is this, a font for ants?</p>
		</Card>

		<Card href="/ctp" title="some dancing bois" icon="ph:gift-duotone">
			<span class="oversize">ðŸ•ºðŸ•ºðŸ•º</span>
		</Card>

		<Card
			href="https://github.com/backwardspy"
			title="github"
			icon="ph:github-logo-duotone"
			external={true}
		>
			<p>
				in which i make it as difficult as possible to change the colour
				of your favourite application
			</p>
		</Card>
	</div>
</BaseLayout>

<style lang="css">
	div.cards {
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		gap: 3rem;
	}

	div.stone {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
	}

	span.inscription {
		margin: 0.2rem;
		text-align: center;
	}

	span.oversize {
		font-size: 3rem;
	}
</style>
