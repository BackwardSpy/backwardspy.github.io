---
import Layout from "../layouts/Layout.astro";

import inscriptions from "../inscriptions.json";
---

<Layout title="rosetta stone">
    <div slot="header" class="title-block">
        <h1 class="title">the catppuccin stone</h1>
    </div>

    <div class="container">
        <div class="stone">
            {
                inscriptions.map((inscription) => (
                    <div class="inscription">
                        {inscription.lines.map((line) => (
                            <p>{line}</p>
                        ))}
                        <p class="credit">
                            <small>
                                {inscription.language} translation by{" "}
                                <a href={inscription.link}>
                                    {inscription.author}
                                </a>
                            </small>
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    div.stone {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }

    @media (max-width: 768px) {
        div.stone {
            grid-template-columns: 1fr;
        }
    }

    div.inscription {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        text-align: center;
        padding: 1rem;

        border-radius: 1rem;
        background-color: rgba(0, 0, 0, 0.03);
    }

    @media (prefers-color-scheme: dark) {
        div.inscription {
            background-color: rgba(255, 255, 255, 0.05);
        }
    }

    div.inscription > p.credit {
        height: 1rem;
    }
</style>
