  {{ inscription(lang="english", author="winston", link="https://winston.sh") }}
  {{ inscription(lang="esperanto", author="pigeon", link="/") }}
  {{ inscription(lang="glaswegian", author="hammy", link="https://goudham.com") }}
  {{ inscription(lang="saxon", author="justTOBBI", link="https://justtobbi.is-a.dev") }}
  {{ inscription(lang="toki-pona", author="pigeon", link="/") }}
  {{ inscription(lang="welsh", author="Name", link="https://github.com/NamesCode") }}
