{% block garbage %}
<script src="https://unpkg.com/htmx.org@1.9.10/dist/htmx.min.js"></script>
<script src="https://unpkg.com/htmx.org@1.9.10/dist/ext/client-side-templates.js"></script>
<script src="https://unpkg.com/handlebars@4.7.8/dist/handlebars.min.js"></script>
<script>
  document.addEventListener('htmx:configRequest', (evt) => { evt.detail.headers = []; });
  Handlebars.registerHelper("eq", (a, b) => a == b)
  Handlebars.registerHelper("sha8", (sha) => sha.slice(0, 8))
  Handlebars.registerHelper("comsg", (msg) => msg.split("\n")[0])
</script>
{% endblock garbage %}